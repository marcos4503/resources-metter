<Window x:Class="Resources_Metter.WindowOverheatWarn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resources_Metter"
        mc:Ignorable="d"
        Title="Resources Metter Overheat Warning" Height="48" Width="300" Background="Transparent" AllowsTransparency="True" WindowStyle="None" Opacity="0.75" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Fill="#FF940000" RadiusX="10" RadiusY="10" StrokeThickness="0"/>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="One or more Hardware is overheated!" Foreground="White" TextAlignment="Center" FontSize="16" FontWeight="Bold" Height="24" Margin="0,12,0,12"/>
    </Grid>
</Window>
